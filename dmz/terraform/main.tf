terraform {
  backend "http" {}
  required_providers {
    proxmox = {
      source  = "Telmate/proxmox"
      version = "3.0.1-rc9"
    }
  }
}

provider "proxmox" {
  pm_parallel     = 1
  pm_tls_insecure = true
  pm_api_url      = var.pm_api_url
  pm_user         = var.pm_user
  pm_password     = var.pm_password
  pm_debug        = false
}

locals {
  sshkeys    = "ssh-rsa  ansible"
  template   = "Debian12-Template"
  storage    = "cache-domains"
  emulatessd = true
  format     = "raw"
  dnsserver  = "192.168.98.1"
  vlan       = 98
  k3smaster = {
    tags   = "k3s_dmz"
    count  = 3
    name   = ["master01-dmz", "master02-dmz", "master03-dmz"]
    cores  = 2
    memory = "4096"
    drive  = 20
    node   = ["mothership", "overlord", "vanguard"]
    ip     = ["11", "12", "13"]
  }
  k3sserver = {
    tags   = "k3s_dmz"
    count  = 3
    name   = ["node01-dmz", "node02-dmz", "node03-dmz"]
    cores  = 4
    memory = "8192"
    drive  = 240
    node   = ["mothership", "overlord", "vanguard"]
    ip     = ["21", "22", "23"]
  }
}
